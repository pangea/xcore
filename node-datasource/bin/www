#!/usr/bin/env node
var debug = require('debug')('node-datasource');
var app   = require('../app');
var https = require('https');
var fs    = require('fs');
var server = https.createServer({
      key: fs.readFileSync(X.options.datasource.keyFile),
      cert: fs.readFileSync(X.options.datasource.certFile)
    }, app.router);

app.socket.server.attach(server);

server.listen(8443);
